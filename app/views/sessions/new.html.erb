

<div class="container">
  <div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-5">
      <div class="card shadow">
        <div class="card-body">
          <h3 class="card-title text-center mb-4">Login to your account</h3>

          <% if flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>

          <%= form_with url: login_path, local: true do |f| %>
            <div class="mb-3">
              <%= label_tag :email, "Email", class: "form-label" %>
              <%= email_field_tag :email, nil, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= label_tag :password, "Password", class: "form-label" %>
              <%= password_field_tag :password, nil, class: "form-control", required: true %>
            </div>

            <div class="d-grid">
              <%= submit_tag "Login", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <p>Don't have an account? <%= link_to "Sign Up", signup_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>