<!DOCTYPE html>
<html>
  <head>
    <title>BlogCrud</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container">
        <div class="d-flex align-items-center">
          <div class="logo"><a class="navbar-brand" href="#">BlogCrud</a></div>
          <div class="menu">
            <ul class="menu-list d-flex m-0 p-0" style="list-style: none;">
              <li class="menu-item">
                <%= link_to "Posts", posts_path, class: "text-decoration-none" %>
              </li>
              <li class="menu-item">
                <%= link_to "Todos", tasks_path, class: "text-decoration-none" %>
              </li>
            </ul>
          </div>
        </div>
        <div class="account">
          <ul class="navbar-nav align-items-center">
            <% if current_user %>
              <li class="nav-item">
                <span class="navbar-text text-white me-2">
                  <strong><%= current_user.email %></strong>
                </span>
              </li>
              <li class="nav-item">
                <%= button_to "Logout", logout_path, method: :delete, class: "btn btn-link nav-link", form: { style: "display:inline;" } %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", login_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Register", signup_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% if flash[:notice] %>
        <div class="alert alert-success"><%= flash[:notice] %></div>
      <% elsif flash[:alert] %>
        <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>

      <%= yield %>
    </div>

  </body>
</html>
